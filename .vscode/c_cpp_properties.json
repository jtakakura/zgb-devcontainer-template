{
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/**",
                "${env:GBDK_PATH}/include",
                "${env:ZGB_PATH}/include"
            ],
            "browse": {
                "path": [
                    "${workspaceFolder}"
                ],
                "limitSymbolsToIncludedHeaders": true,
                "databaseFilename": ""
            },
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE",
                "__PORT_gbz80"
            ],
            "forcedInclude": ["${workspaceFolder}/include/ZGBMain.h"],
            "compilerPath": "/usr/bin/gcc",
            "compilerArgs": [
                "-Wa-l -Wl-m"
            ],
            "cStandard": "c11",
            "cppStandard": "c++11",
            "intelliSenseMode": "${default}"
        }
    ],
    "version": 4
}
